<!DOCTYPE HTML>
<HTML>
    <head>
        <title>Login</title>
        <link rel="stylesheet" href="/css/login.css" />
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <label id="title">ADMIN LOGIN</label>
            </div>
            <div id="body">
                <form id="frmLogin" action="/admin/check_login" method="POST">
                    <table>
                        <tr>
                            <td>
                                <input type="text" id="txtUsername" name="username" placeholder="What your name ?" required="required" /><br/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="password" id="txtPass" name="pass" placeholder="What your password ?" required="required" /><br/>
                                <% if(locals.error) {%>
                                    <label class="error"><%=error %></label>
                                <% } %>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="submit" value="LOGIN" id="btnLogin" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#frmLogin").on("submit", function(e){
                return true;
            });
        });
    </script>
    </body>
</HTML>